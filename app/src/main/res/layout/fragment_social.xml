<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentacion.social.SocialFragment">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="112dp"
        android:layout_height="107dp"
        android:layout_marginStart="28dp"
        android:contentDescription="profile photo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.048"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/txUserName"
        android:layout_width="203dp"
        android:layout_height="40dp"
        android:layout_marginEnd="48dp"
        android:text="UserName"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <TextView
        android:id="@+id/txResumenTareas"
        android:layout_width="257dp"
        android:layout_height="36dp"
        android:text="Resumen de tareas"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.181"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.253" />

    <LinearLayout
        android:id="@+id/layoutResumenTareas"
        android:layout_width="366dp"
        android:layout_height="122dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.622"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txResumenTareas"
        app:layout_constraintVertical_bias="0.0">

        <LinearLayout
            android:id="@+id/layoutTareasAcabadas"
            android:layout_width="183dp"
            android:layout_height="122dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txNumTareasAcabadas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txTareasAcabadas"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Tareas acabadas"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutTareasNoAcabadas"
            android:layout_width="183dp"
            android:layout_height="122dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txNumTareasNoAcabadas"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:gravity="center"
                android:text="TextView"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txTareasNoAcabadas"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:gravity="center"
                android:text="Tareas pendientes"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>